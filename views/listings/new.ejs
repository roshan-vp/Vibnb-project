<% layout("/layouts/boilerplate") -%>

<div class="row mt-3">
    <div class="col-sm-8 offset-2">
        <br><br>
<h3>Create New Listing</h3>
<form action="/listings" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
    <div class="xs-3">
        <label for="title" class="form-label">Title</label>
        <input type="text" class="form-control" placeholder="Add a catchy title" name="listing[title]" required>
        <div class="valid-feedback">
            Looks good!
          </div>
        <div class="invalid-feedback">
            Please Write Title.
          </div>
    </div>
    <div class="xs-3">
        <label for="description" class="form-label">Description</label><br>
        <textarea placeholder="Enter description" name="listing[description]" class="form-control" required></textarea>
        <div class="valid-feedback">
            Looks good!
        </div>
        <div class="invalid-feedback">
            Please Write Description
        </div>
    </div>
    
    <div class="xs-3">
        <label for="image" class="form-label">Upload image</label>
        <input type="file" class="form-control" name="listing[image]">
        required
    </div>
    <div class="row">
        <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input class="form-control" required placeholder="eg. &#8377; 1,200" name="listing[price]" step="50">
            <div class="valid-feedback">
                Looks good!
              </div>
            <div class="invalid-feedback">
            Add Vaild Price
          </div>
        </div>
        <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input type="text" class="form-control" placeholder="India" name="listing[country]" required>
            <div class="valid-feedback">
                Looks good!
              </div>
            <div class="invalid-feedback">
            Add Vaild Country.
          </div>
        </div>
    </div>
    <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input type="text" class="form-control" placeholder="Kochi, Kerala" name="listing[location]" required>
        <div class="valid-feedback">
            Looks good!
          </div>
        <div class="invalid-feedback">
            Add Vaild Location
          </div>
    </div>
    <button class="btn btn-dark add-btn mb-3">Add</button>
</form>
</div>
</div>