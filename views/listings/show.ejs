<% layout("/layouts/boilerplate") -%>

<script>
    const mapKey = "<%= process.env.MAP_KEY %>";
</script>

<div class="row mt-3">
<div class="col-md-8 offset-3 mt-3">
    <h3><%= listing.title %></h3>
</div>
</div>
<div class="row">
<div class="col-md-6 offset-3">
    <div class="card listing-card">
        <img src=" <%= listing.image.url %> " class="card-img-top show-img">
        <div class="card-body">
            <p class="card-text">
                Owned By <i><%= listing.owner.username %></i><br>
                <%= listing.description %> <br>
                &#8377; <%= listing.price.toLocaleString("en-IN") %> <br>
                <%= listing.location %> <br>
                <%= listing.country %> 
            </p>
        </div>
        </div>
    </div>
</div>

<% if(currUser && listing.owner._id.equals(currUser._id)) { %>
<div class="col-1 offset-3">
    <form action="/listings/<%= listing._id %>/edit" method="GET">
        <button class="btn btn-dark mb-3 edit-btn">Edit</button>
    </form>
    <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST">
        <button class="btn add-btn mb-3 offset-5">Delete</button>
    </form>
</div>
<% } %>

<div class="col-md-8 offset-3 mt-3 mb-3">
    <% if(currUser) { %>
    <hr>
    <h4>Leave a Review</h4>
    <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">
        
        <legend>Rating:</legend>
        <fieldset class="starability-slot">
                <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                <label for="first-rate1" title="Terrible">1 star</label>
                <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                <label for="first-rate2" title="Not good">2 stars</label>
                <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                <label for="first-rate3" title="Average">3 stars</label>
                <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                <label for="first-rate4" title="Very good">4 stars</label>
                <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>

        <div class="mb-3 mt-3">
            <label for="comment" class="form-label">Comment</label>
            <textarea name="review[comment]" id="comment" placeholder="leave a comment" cols="40" rows="5" class="form-control" required></textarea>
            <div class="valid-feedback">Looks Good!</div>
            <div class="invalid-feedback">Please add comment for reviews</div>
        </div>
        <button class="btn btn-outline-dark">Submit</button>
    </form>
    <% } %>
</div>

<div class="col-md-8 offset-3 mt-3 mb-3">
    <hr>
    <% if(listing.reviews.length > 0) { %>
    <h4>All Reviews</h4>
    <div class="row">
        <% for(review of listing.reviews) { %>
            <div class="card col-md-5 mb-3 mx-4">
                <div class="card-body">
                    <h5 class="card-title">@<%= review.author.username %></h5>
                    <p class="card-text"> <%= review.comment %></p>
                </div>
                <p class="starability-result card-text" data-rating="<%= review.rating %>"></p>
                <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-danger mb-3">Delete</button>
                </form>
            </div>
           
        <% } %>
        <hr>
    </div>
    <% } %> 
</div>
<div class="col-md-8 offset-3 mt-3 mb-3">
    <h3>Where you'll be</h3>
    <div id="map"></div>
</div>
    
<script src="/js/map.js"></script>